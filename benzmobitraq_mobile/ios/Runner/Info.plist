<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- ============================================================ -->
	<!-- APP CONFIGURATION -->
	<!-- ============================================================ -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>BenzMobiTraq</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>benzmobitraq_mobile</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	
	<!-- ============================================================ -->
	<!-- LOCATION PERMISSIONS (CRITICAL) -->
	<!-- ============================================================ -->
	
	<!-- Required: When In Use description -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>BenzMobiTraq needs your location to track your work travel distance. This helps accurately record your kilometers during active work sessions.</string>
	
	<!-- Required: Always (background) description -->
	<key>NSLocationAlwaysUsageDescription</key>
	<string>BenzMobiTraq needs background location access to continue tracking your travel distance even when the app is not open. This ensures accurate km recording during your work day.</string>
	
	<!-- Required for iOS 11+: Combined permission -->
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>BenzMobiTraq needs location access to track your work travel distance. Background location ensures tracking continues during your entire work session, even when using other apps.</string>
	
	<!-- ============================================================ -->
	<!-- MOTION/SENSORS PERMISSIONS -->
	<!-- ============================================================ -->
	
	<!-- Motion detection for battery optimization -->
	<key>NSMotionUsageDescription</key>
	<string>BenzMobiTraq uses motion detection to save battery - we only use GPS when you're moving.</string>
	
	<!-- ============================================================ -->
	<!-- CAMERA/PHOTO LIBRARY (for expense receipts) -->
	<!-- ============================================================ -->
	
	<key>NSCameraUsageDescription</key>
	<string>BenzMobiTraq needs camera access to capture photos of expense receipts.</string>
	
	<key>NSPhotoLibraryUsageDescription</key>
	<string>BenzMobiTraq needs photo library access to attach receipt images to expense claims.</string>
	
	<!-- ============================================================ -->
	<!-- BACKGROUND MODES (CRITICAL) -->
	<!-- ============================================================ -->
	
	<key>UIBackgroundModes</key>
	<array>
		<!-- Background location updates -->
		<string>location</string>
		<!-- Background fetch for syncing -->
		<string>fetch</string>
		<!-- Push notifications -->
		<string>remote-notification</string>
		<!-- Background processing -->
		<string>processing</string>
	</array>
	
	<!-- ============================================================ -->
	<!-- UI CONFIGURATION -->
	<!-- ============================================================ -->
	
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Status bar -->
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	<key>UIStatusBarHidden</key>
	<false/>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>
	
	<!-- Firebase Configuration -->
	<key>FirebaseAppDelegateProxyEnabled</key>
	<false/>
	
</dict>
</plist>
